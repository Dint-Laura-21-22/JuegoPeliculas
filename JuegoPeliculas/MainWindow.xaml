<Window x:Class="JuegoPeliculas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoPeliculas"
        mc:Ignorable="d"
        Title="Adivina La Pelicula" Height="599" Width="858.5" MinHeight="500" MinWidth="500"
        Background="Bisque">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="Titulos">
            <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="Padding" Value="10"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF1207FD" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type Image}" x:Key="FlechaAdelantarStyle">
            <Setter Property="Width" Value="50"></Setter>
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <TabControl Background="BlanchedAlmond">
            <!--Pestaña para jugar-->
            <TabItem>
                <!--Pestaña Juego-->
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/modificar.ico" Width="30"></Image>
                        <TextBlock Text="Jugar" Height="15" FontFamily="Comic Sans" Foreground="Blue"></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <!--Contenido Pestaña Juego-->
                <TabItem.Content>
                    <DockPanel Margin="10" LastChildFill="False" RenderTransformOrigin="0.498,0.345">
                        <DockPanel.Background>
                            <ImageBrush ImageSource="/assets/fondo-juego-espacial.jpg" Stretch="UniformToFill" Opacity="0.7"></ImageBrush>
                        </DockPanel.Background>
                        <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Margin="0,0,0,77" Width="298">
                            <TextBlock Text="Cartel de la película" Style="{StaticResource Titulos}"></TextBlock>
                            <Image Source="/assets/configuracion.jpg" Width="296" Height="355"
                               Stretch="Fill"></Image>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" HorizontalAlignment="Left" Margin="20,10,0,10" Height="152" Width="416">
                            <TextBlock Style="{StaticResource Titulos}" Margin="0,0,320,0" Height="34">Puntuacion</TextBlock>
                            <Button Content="Nueva Partida" HorizontalAlignment="Right" Margin="10"/>
                            <Button Content="Finalizar partida" HorizontalAlignment="Right"></Button>
                            <Border BorderBrush="Black" BorderThickness="2" Height="91" Width="200" HorizontalAlignment="Left" Margin="0,-52,0,0">
                                <TextBlock  />
                            </Border>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Vertical" Height="336">
                            <TextBlock Text="Titulo de la película" Style="{StaticResource Titulos}" Width="136" Height="33" HorizontalAlignment="Left" Margin="10,0,0,0"></TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Height="30" Width="293" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                                <Button Content="Validar" Height="30" Width="50" HorizontalAlignment="Right" Margin="10" Template="{DynamicResource BotonesJuego}"/>
                            </StackPanel>
                            <CheckBox Content="Ver Pista" Margin="10" FontFamily="Times New Roman"></CheckBox>
                            <TextBox Text="Pista descubierta" Margin="10"></TextBox>
                            <Image Height="50" Margin="194,0,210,0"/>
                            <TextBlock Style="{StaticResource Titulos}" Text="Genero" HorizontalAlignment="Right" Margin="0,0,196,0" Height="31" Width="99">
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom"  Height="60" Margin="212,40,123,40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="191">
                                <Image x:Name="FlecharetrocesoImage"  Source="/assets/arrow.ico" Width="32"/>
                                <TextBlock Style="{StaticResource Titulos}" x:Name="Texto1TextBlock" Text="1" FontSize="30"></TextBlock>
                                <TextBlock Style="{StaticResource Titulos}" x:Name="Texto2TextBlock" Text="/" FontSize="30"></TextBlock>
                                <TextBlock Style="{StaticResource Titulos}" x:Name="Texto3TextBlock" Text="5" FontSize="30"></TextBlock>
                                <Image x:Name="FlechaAdelantar" Source="/assets/arrow.ico"  Style="{StaticResource FlechaAdelantarStyle}" Width="32"/>
                            </StackPanel>
                        </StackPanel>

                    </DockPanel>

                </TabItem.Content>
            </TabItem>
            <!--Pestaña de gestion-->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/gestionar.ico" Width="30"></Image>
                        <TextBlock Text="Gestionar" Height="15" FontFamily="Times New Roman" Foreground="Red"></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <!--Contenido pestaña gestion-->
                <DockPanel>
                    <DockPanel.Background>
                        <ImageBrush ImageSource="/assets/configuracion.jpg" Stretch="UniformToFill" Opacity="0.7"></ImageBrush>
                    </DockPanel.Background>
                    
                    <!--Aquí va un list box mirar ejemplo comida-->
                </DockPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
