<Window x:Class="JuegoPeliculas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JuegoPeliculas"
        mc:Ignorable="d"
        Title="Adivina La Pelicula" Height="450" Width="800" MinHeight="500" MinWidth="500"
        Background="Bisque">
    <Grid>
        <TabControl>
            <!--Pestaña para jugar-->
            <TabItem>
                <!--Pestaña Juego-->
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/modificar.ico" Width="30"></Image>
                        <TextBlock Text="Jugar" Height="15" FontFamily="Comic Sans" Foreground="Blue"></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <!--Contenido Pestaña Juego-->
                <TabItem.Content>
                    <DockPanel Margin="10" LastChildFill="False">
                        <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <TextBlock Text="Cartel de la película" FontSize="14" Padding="10"></TextBlock>
                        <Image Source="/assets/configuracion.jpg" Width="300" Height="390"
                               Stretch="Fill"></Image>
                        </StackPanel>
                        <Grid DockPanel.Dock="Top">
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Puntuacion"></TextBlock>
                            <TextBlock Grid.Column="0" Grid.Row="0" Width="100"></TextBlock>
                        </Grid>
                    </DockPanel>
                </TabItem.Content>
            </TabItem>
            <!--Pestaña de gestion-->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/assets/gestionar.ico" Width="30"></Image>
                        <TextBlock Text="Gestionar" Height="15" FontFamily="Times New Roman" Foreground="Red"></TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <Image Source="/assets/configuracion.jpg" Stretch="UniformToFill"  Opacity="0.5"></Image>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
